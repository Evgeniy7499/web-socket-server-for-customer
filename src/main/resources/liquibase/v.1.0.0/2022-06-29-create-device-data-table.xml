<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">


    <changeSet id="29-06-22-create-device-data-table" author="mkorotkiy">
        <createTable tableName="device_data">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_device_data"/>
            </column>
            <column name="mac" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="temp" type="int"/>
            <column name="backlight" type="int"/>
            <column name="volume" type="int"/>
            <column name="working_hours" type="varchar(64)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>